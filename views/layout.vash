<!DOCTYPE html>
<html>
<head>
  <title>@model.title | The Social Cookbook</title>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.6/semantic.min.css">
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>
<body>
  @html.include("menu", model)

  <!-- Page Contents -->
  <div class="pusher">
    <div class="ui inverted vertical masthead center aligned segment">

      <div class="ui container">
        <div class="ui large secondary inverted pointing menu">
          <a class="toc item">
            <i class="sidebar icon"></i>
          </a>
          @model.navigation.forEach(function(item) {
            if(item.active) {
              <a class="item active" href="@item.path">
                @item.title
              </a>
            }
            else {
              <a class="item" href="@item.path">
                @item.title
              </a>
            }
          })
          <div class="right item">
            <a class="ui inverted button">Log in</a>
            <a class="ui inverted button">Sign Up</a>
          </div>
        </div>
      </div>

      @html.block("jumbotron")

    </div>

    @html.block('content')

    <div class="ui inverted vertical footer segment">
      <div class="ui container">
        <div class="ui stackable inverted divided equal height stackable grid">
          <div class="thirteen wide column">
            <h4 class="ui inverted header">The Social Cookbook</h4>
            <p>Project maintained by David Rutqvist and Erik Hal√©n.</p>
            <p><a href="https://github.com/DavidRutqvist/social-cookbook/">Github repository</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.6/semantic.min.js"></script>
  <script src="/javascripts/main.js"></script>

</body>
</html>
